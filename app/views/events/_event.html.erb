<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
  <%= link_to event_path(event) do %>
   <div class="thumbnail-inner event-info-inner"> 
        <%= content_tag 'div', '', class: 'event-background', style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>
      <div class="caption">
        <div class="event-description">
          <h3><%= event.title %></h3>
          <h3>
            <small><%= event.datetime %></small>
          </h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>