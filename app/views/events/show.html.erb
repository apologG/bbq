<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background', style: "background-image: url(#{asset_path('event.jpg')})" %>
      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            
            <h3><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
          </div>
        </div>
          <div class="buffer-top col-md-5">
            <p><%= @event.description %></p>
          </div>
          <div class="col-md-1">
            <div class="btn-group-vertical buffer-top">
              <%= link_to fa_icon('pencil'), edit_event_path(@event), class: 'btn btn-primary' if current_user_can_edit?(@event)%>
              <%= link_to fa_icon('arrow-left'), :back, class: 'btn btn-warning'%>
              <%= link_to fa_icon('ban'), event_path(@event), :method => :delete, 
                                                          data: { confirm:  t('events.event.destroy_confirm')},class: 'btn btn-danger' if current_user_can_edit?(@event)%>
            </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
        <div class="buffer-both">
        <%= render partial: 'comments/comment', collection: @event.comments %>
        </div>
      </div>
    </div>
  </div>
</div>
