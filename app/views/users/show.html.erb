<div class="text-center">
  <%= image_tag user_avatar(@user) %>
  <h1>
    <%= @user.name %> 
    <%= link_to fa_icon('pencil'), edit_user_path(@user), class: 'buffer-left' if @user == current_user %>
  </h1>

  

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any?%>
        <h3>Организовал: </h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-both">Пользователь пока ничего не огранизовал</p>
      <% end %>
    </div>
  </div>
</div>