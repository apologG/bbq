<span class="user">
    <span class="user-avatar">
      <%= image_tag(user_avatar(user), class: 'img-icon') %>
    </span>
    <span class="user-name">
    <% if user.present? %>
      <% if (request.path == user_path(user)) %>
        <%= user.name %>
      <% else %>
        <%= link_to user.name, user_path(user)%>
      <% end %>
    <% end %>
    </span>
</span>