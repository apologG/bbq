<h1><%= t '.title' %></h1>
<p><%= t '.name' %>: <strong><%= @name %></strong></p>
<hr>
<%= t '.event' %>
<h3><%= @event.title %></h3>
<%= t '.datetime' %>
<h4><%= l @event.datetime, format: :long %></h4>
<%= t '.owner' %>
<h4><%= @event.user.name %></h4>
<h5><%= t '.email' %>: <strong><%= link_to @event.user.email, "mailto:#{@event.user.email}" %></strong></h5>